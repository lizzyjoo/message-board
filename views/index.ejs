<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>

    <a href="/new" class="new-message-button">Add New Message</a>

    <% for (let i = 0; i < messages.length; i++) { %>
    <div class="message">
      <div class="message-user"><%= messages[i].user %></div>
      <div class="message-date"><%= messages[i].added.toLocaleString() %></div>
      <div class="message-text"><%= messages[i].text %></div>
    </div>
    <% } %>
  </body>
</html>
